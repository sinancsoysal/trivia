<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/arts"
        android:minHeight="?actionBarSize">


        <ImageView
            android:id="@+id/leftdifficultyarts"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/goback"
            android:src="@drawable/backcartoon" />

        <TextView
            android:id="@+id/textviewdifficultyarts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/CHOOSEDIFFICULTY"
            android:textColor="#ffffff"
            android:textSize="55sp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/arts"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/easyarts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="55dp"
            android:paddingRight="55dp"
            android:text="@string/easy"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/mediumarts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/medium"
            android:textColor="#ffffff"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/hardarts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/hard"
            android:textColor="#ffffff"
            android:textSize="35sp" />


    </LinearLayout>


    <sarveshchavan777.inrerface2.HolderActivities.SlidingTabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>