<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/transparent2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/revealtext2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/reveal"
            android:textColor="@color/white"
            android:textSize="40sp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <info.hoang8f.widget.FButton
                android:id="@+id/cance11"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:text="@string/cancel"
                android:textColor="@color/white"
                app:buttonColor="@color/cancelred" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/transparent2" />

    <TextView
        android:id="@+id/costReavel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="@string/cost2gems"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:padding="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <info.hoang8f.widget.FButton
            android:id="@+id/usegems"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:drawableRight="@drawable/gems"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:text="@string/useDiamond"
            android:textColor="@color/grey"
            android:textSize="25sp"
            app:buttonColor="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/or"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/rewardline"
            android:textColor="@color/lightred"
            android:textSize="25sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <info.hoang8f.widget.FButton
            android:id="@+id/watchvideo"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:drawableEnd="@drawable/youtube_2"
            android:drawableRight="@drawable/youtube_2"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:text="@string/watchvideo"
            android:textColor="@color/grey"
            android:textSize="25sp"
            app:buttonColor="@color/white" />

